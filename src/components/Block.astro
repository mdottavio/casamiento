---
import Navigation from './Navigation.astro';
export interface Props {
  id: string;
}

const { id  } = Astro.props as Props;
---
<section class:list={["block", id]}>
  <div class="box-1">
    <div >
      <slot name="left"/>
    </div>
    <Navigation />
  </div>
  
  <div class="box-2">
    <slot name="right"/>
  </div>

</section>

<style lang="scss">
  @import "../styles/global";
  .block {
    background: #ffffff;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    height: (100vh - ($padding * 2));
    width: 100%;

    border-radius: 4px;
    @include query (mobile){
      flex-direction: column-reverse;
    }

    .box-1 {
      background: rgb(255, 255, 255);
      border-top-left-radius: 4px;
      border-bottom-left-radius: 4px;
      justify-content: space-between;
      @include query (mobile){
        flex-direction: column;
        padding-bottom: 0;
      }
    }
    .box-2 {
      background: #e5e3df;
      border-top-right-radius: 4px;
      border-bottom-right-radius: 4px;
      flex-grow: 0;
      overflow: hidden;
      &:first-child {
        height: 100%;
      }
      
      @include query (mobile){
        border-top-left-radius: 4px;
      }
    }

    &.place {
      @include query (mobile){
        .box-1 {
          flex-basis: 30%;
        }
        .box-2 {
          flex-basis: 70%;
        }
      }
    }
  }

  [class ^="box-"] {
    display: flex;
    flex-shrink: 1;
    flex-basis: 50%;
    flex-direction: column;
    height: 100%;
    width: 100%;
    @include query (mobile){
      flex-direction: column-reverse;
    }
  }
</style>


<style lang="scss" is:global>
  @import "../styles/global";
  h1 {
    color: #474747;
    font-family: "Raleway", sans-serif;
    letter-spacing: 0.5rem;
    text-transform: uppercase;
    font-size: 1.875em;
    line-height: 1.375;
    font-weight: 700;
    margin: 1vh 0;
    @include query(mobile) {
      font-size: 1.3em;
    }
    @include mobileLandscape {
      font-size: 1.3em;
    }
  }
  h3 {
    text-transform: uppercase;
    color: #474747;
    font-family: 'Raleway', sans-serif;
    letter-spacing: 0.25rem;
    width: calc(100% + 0.25rem);
    font-size: 0.75em;
    line-height: 1.875;
    font-weight: 300;
    margin: 1vh 0;

    @include mobileLandscape {
      font-size: 0.25em;
    }
  }

  .section-content {
    padding: $padding;
    padding-bottom: 0;
    width: 100%;
    @include query (mobile){
      margin-top: 0;
    }
    .description {
      color: #474747;
      font-family: 'Source Sans Pro', sans-serif;
      letter-spacing: 0.025rem;
      width: calc(100% + 0.025rem);
      font-size: 1em;
      line-height: 2.475;
      font-weight: 300;

      @include query (mobile){
        line-height: 1.875;
        margin-top: 0;
      }

      @include mobileLandscape {
        line-height: 1.32;
        margin-top: 0;
      }
      
    }
  }

  .section-img {
    position: relative;
    height: 100%;
    img {
      object-fit: cover;
      object-position: top;
      width: 100% !important;
      height: 100% !important;
    }
  }

</style>
